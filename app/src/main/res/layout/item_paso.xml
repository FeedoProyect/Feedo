<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="17dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_boton_welcome"
    android:backgroundTint="@color/color_boton_welcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Paso número -->
        <TextView
            android:id="@+id/tvPasoNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1"
            android:textStyle="bold"
            android:textColor="@color/text_de_items"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvPasoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del paso..."
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
